#!/usr/bin/sh
white="\033[0;37m"
light_white="\033[1;37m"
black="\033[0;47;30m"
light_black="\033[1;30m"
blue="\033[0;34m"
light_blue="\033[1;34m"
green="\033[0;32m"
light_green="\033[1;32m"
cyan="\033[0;36m"
light_cyan="\033[1;36m"
red="\033[0;31m"
light_red="\033[1;31m"
purple="\033[0;35m"
light_purple="\033[1;35m"
yellow="\033[0;33m"
light_yellow="\033[1;33m"
orange="\x1b[38;5;166m"
light_orange="\x1b[38;5;208m"
reset="\033[0m"

# colored text
echo "${white}WHITE\t\t#a89984${reset}"
echo "${light_white}LIGHT WHITE\t#ebdbb2${reset}"
echo "${black}BLACK\t\t#282828${reset}"
echo "${light_black}LIGHT BLACK\t#928374${reset}"
echo "${blue}BLUE\t\t#458588${reset}"
echo "${light_blue}LIGHT BLUE\t#83a598${reset}"
echo "${green}GREEN\t\t#98971a${reset}"
echo "${light_green}LIGHT GREEN\t#b8bb26${reset}"
echo "${cyan}CYAN\t\t#689d6a${reset}"
echo "${light_cyan}LIGHT CYAN\t#8ec07c${reset}"
echo "${red}RED\t\t#cc241d${reset}"
echo "${light_red}LIGHT RED\t#fb4934${reset}"
echo "${purple}PURPLE\t\t#b16286${reset}"
echo "${light_purple}LIGHT PURPLE\t#d3869b${reset}"
echo "${yellow}YELLOW\t\t#d79921${reset}"
echo "${light_yellow}LIGHT YELLOW\t#fabd2f${reset}"

#not the exact color, where just to have a reference to it
bash -c "printf '${orange}ORANGE\t\t#d65d06${reset}\n'"
bash -c "printf '${light_orange}LIGHT ORANGE\t#fe8019${reset}\n'"
