#!/usr/bin/sh
white="\033[0;37m"
light_white="\033[1;37m"
black="\033[0;47;30m"
light_black="\033[1;30m"
blue="\033[0;34m"
light_blue="\033[1;34m"
green="\033[0;32m"
light_green="\033[1;32m"
cyan="\033[0;36m"
light_cyan="\033[1;36m"
red="\033[0;31m"
light_red="\033[1;31m"
purple="\033[0;35m"
light_purple="\033[1;35m"
yellow="\033[0;33m"
light_yellow="\033[1;33m"
orange="\x1b[38;5;166m"
light_orange="\x1b[38;5;208m"
reset="\033[0m"

# colored text
echo "${white}WHITE\t\ta89984${reset}"
echo "${light_white}LIGHT WHITE\tebdbb2${reset}"
echo "${black}BLACK\t\t282828${reset}"
echo "${light_black}LIGHT BLACK\t928374${reset}"
echo "${blue}BLUE\t\t458588${reset}"
echo "${light_blue}LIGHT BLUE\t83a598${reset}"
echo "${green}GREEN\t\t98971a${reset}"
echo "${light_green}LIGHT GREEN\tb8bb26${reset}"
echo "${cyan}CYAN\t\t689d6a${reset}"
echo "${light_cyan}LIGHT CYAN\t8ec07c${reset}"
echo "${red}RED\t\tcc241d${reset}"
echo "${light_red}LIGHT RED\tfb4934${reset}"
echo "${purple}PURPLE\t\tb16286${reset}"
echo "${light_purple}LIGHT PURPLE\td3869b${reset}"
echo "${yellow}YELLOW\t\td79921${reset}"
echo "${light_yellow}LIGHT YELLOW\tfabd2f${reset}"

#not the exact color, where just to have a reference to it
bash -c "printf '${orange}ORANGE\t\td65d06${reset}\n'"
bash -c "printf '${light_orange}LIGHT ORANGE\tfe8019${reset}\n'"
