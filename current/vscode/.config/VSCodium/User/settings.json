{
    "workbench.colorTheme": "Gruvbox Dark Medium",
    "editor.fontWeight": "bold",
    "editor.fontFamily": "'fira code medium'",
    "editor.fontSize": 13,
    "editor.fontLigatures": true,
    "gitlens.views.repositories.location": "gitlens",
    "gitlens.views.fileHistory.location": "gitlens",
    "gitlens.views.lineHistory.location": "gitlens",
    "gitlens.views.compare.location": "gitlens",
    "gitlens.views.search.location": "gitlens",
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "todo-tree.tree.showScanModeButton": false,
    "editor.wordWrap": "on",
    "editor.acceptSuggestionOnEnter": "off",
    "files.associations": {
        "*.rmd": "markdown"
    },
    "markdown.preview.fontFamily": "-apple-system, BlinkMacSystemFont,'Iosevka', 'fira code'",
    "markdown-preview-enhanced.previewTheme": "monokai.css",
    "plantuml.exportConcurrency": 6,
    "plantuml.exportFormat": "svg",
    "rainbow_csv.comment_prefix": "#",
    "rainbow_csv.csv_lint_detect_trailing_spaces": true,
    "editor.cursorBlinking": "expand",
    "editor.cursorStyle": "underline",
    "editor.minimap.maxColumn": 100,
    "editor.minimap.scale": 2,
    "files.defaultLanguage": "$(activeEditorLanguage)",
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "workbench.iconTheme": "Monokai Pro Icons",
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "cSpell.language": "en,pt",
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
    "latex-workshop.view.pdf.viewer": "tab",
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "markdown-preview-enhanced.codeBlockTheme": "monokai.css",
    "gitlens.gitCommands.closeOnFocusOut": true,
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "redhat.telemetry.enabled": false,
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.codeActionsOnSave": null,
    "editor.bracketPairColorization.enabled": true,
    "cSpell.userWords": [
        "Flink"
    ],
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[dockercompose]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
}
