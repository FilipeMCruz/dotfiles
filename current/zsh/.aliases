alias code='/usr/share/vscodium-bin/codium'
alias mpd='mpd ~/.mpd/mpd.conf'
alias yolo='git commit -m "$(curl -s http://whatthecommit.com/index.txt)"'
alias :wq="echo You're not in vim dumbass!"
# so that alias can be sudo'ed
alias sudo='sudo '

# bonus
alias yay="paru "
alias yeet="paru -Rsn "
alias yeeet="yeet $(paru -Qdtq)"
alias nps="npm "
alias pins="paru -Slq | fzf -m --preview 'cat <(paru -Si {1}) <(paru -Fl {1} | awk \"{print \$2}\")' | xargs -ro paru -S"

# use exa instead of ls
alias ls="exa "
alias ll="exa -ll"
alias la="exa -la --git --group-directories-first"
alias ytop="ytop -c gruvbox "

alias -s md=code

alias -s svg=firefox

alias -s json=code

function show() {
  bat $(which $1)
}

function take() {
  mkdir -p $@ && cd ${@:$#}
}

function uuid() {
  cat /proc/sys/kernel/random/uuid
}
